<Window x:Class="Maze.ServerConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ServerConnectWindow" Height="200" Width="300">
    <Grid>
        <!-- Поле для ввода IP адреса -->
        <TextBlock Text="IP адрес:" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="ipTextBox" VerticalAlignment="Top" Margin="100,10,10,0" Width="200"/>

        <!-- Поле для ввода порта -->
        <TextBlock Text="Порт:" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <TextBox x:Name="portTextBox" VerticalAlignment="Top" Margin="100,50,10,0" Width="200"/>

        <!-- Кнопка "Создать сервер" или "Подключиться" -->
        <Button x:Name="connectButton" Content="Подключиться" Click="ConnectButton_Click" Margin="38,100,167,42"/>

        <!-- Кнопка "Отмена" -->
        <Button Content="Отмена" Click="CancelButton_Click" Margin="172,100,19,42"/>
    </Grid>
</Window>
